#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
	int solve(vector<int>v, int k) {
	    int n = v.size();
	    int len = 0;
	    int i = 0, j;
	    for(j = 0; j < 2*v.size(); j++) {
	        if (v[j%n] == 0) {
	            k--;
	        }

	        if (k < 0) {
	            if (j-i > n) {
	                len = n;
	            } else {
	                len = max(len, j-i);
	            }

	            while(k < 0) {
	                if (v[i%n] == 0) {
	                    k++;
	                }
	                i++;
	            }
	        }

	    }

	    if (j-i > n) {
	        len = n;
	    } else {
	        len = max(len, j-i);
	    }
	    return len;
	}

};

int main() {
