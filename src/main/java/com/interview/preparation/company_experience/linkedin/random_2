#include <bits/stdc++.h>
using namespace std;

class Solution {
  private:
    bool check(int x, int y) {
        if (min(abs(x-y), abs(x+y)) <= min(abs(x), abs(y))) {
            if (max(abs(x-y), abs(x+y)) >= max(abs(x), abs(y))) {
                return true;
            } else {
                return false;
            }
        }else {
            return false;
        }
    }
  public:
    int solve1(vector<int>&arr) { //O(n^2)
        int count = 0;
        vector<vector<int>>pairs;
        for(int i=0;i<arr.size();i++) {
            for(int j=i+1;j<arr.size();j++) {
                if (check(arr[i], arr[j])) {
                    count++;
                    pairs.push_back({arr[i], arr[j]});
                }
            }
        }
        for(int i=0;i<pairs.size();i++) {
            cout<<pairs[i][0]<<" "<<pairs[i][1]<<endl;
        }
        cout<<endl;
        return count;
    }

    int solve2(vector<int>&arr) { //O(nlogn)
        for(int i=0;i<arr.size();i++) {
            arr[i] = abs(arr[i]);
        }

        sort(arr.begin(), arr.end());

        int count = 0;
        for(int i=0;i<arr.size();i++) {
            int index = upper_bound(arr.begin(), arr.end(), 2*arr[i]) - arr.begin();
            count = count + (index - i - 1);
        }
        return count;
    }
};
/*
1 2
2 3
2 4
4 7
7 9
7 10
*/

int main() {
    // vector<int>arr = {1,2,3,4,7,9,10};
    // vector<int>arr = {2, -3, 5};
    // vector<int>arr = {2, -9, 1, 3, -7, 4};
    Solution* solution = new Solution();
    cout<<solution->solve2(arr);
}